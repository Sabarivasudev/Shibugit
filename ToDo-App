import { useState } from 'react';
import reactLogo from './assets/react.svg';
import viteLogo from '/vite.svg';
import './App.css';
import Todo from './To-Do';

function App() {
  return (
    <div className="App">
      <h1>My To-Do App</h1>
      <Todo /> {/* ‚Üê Corrected component name */}
    </div>
  );
}

export default App;
